<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="150.0" prefWidth="300.0" spacing="8.0" stylesheets="@../styles.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.engatec.vdl.ui.controller.AboutController">
   <children>
      <GridPane alignment="CENTER_LEFT" hgap="8.0" vgap="12.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" />
          <ColumnConstraints halignment="RIGHT" hgrow="NEVER" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints vgrow="SOMETIMES" />
          <RowConstraints vgrow="SOMETIMES" />
          <RowConstraints vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label fx:id="vdlVersionLabel" text="%stage.about.label.version.vdl">
               <font>
                  <Font size="13.0" />
               </font>
            </Label>
            <HBox alignment="CENTER_LEFT" GridPane.rowIndex="1">
               <children>
                  <Label fx:id="youtubeDlVersionLabel" minHeight="-Infinity" minWidth="-Infinity" text="%stage.about.label.version.youtubedl">
                     <font>
                        <Font size="13.0" />
                     </font>
                  </Label>
                  <ProgressIndicator fx:id="youtubeDlVersionProgress" />
               </children>
            </HBox>
            <Button fx:id="youtubeDlUpdateBtn" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" text="%update" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <HBox alignment="CENTER_LEFT" GridPane.rowIndex="2">
               <children>
                  <Label fx:id="ytdlpVersionLabel" minHeight="-Infinity" minWidth="-Infinity" text="%stage.about.label.version.ytdlp">
                     <font>
                        <Font size="13.0" />
                     </font>
                  </Label>
                  <ProgressIndicator fx:id="ytdlpVersionProgress" />
               </children>
            </HBox>
            <Button fx:id="ytdlpUpdateBtn" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" text="%update" GridPane.columnIndex="1" GridPane.rowIndex="2" />
         </children>
      </GridPane>
      <Pane prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
      <AnchorPane>
         <children>
            <Button fx:id="closeBtn" mnemonicParsing="false" styleClass="control-btn" text="%close" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0" />
         </children>
      </AnchorPane>
   </children>
   <padding>
      <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
   </padding>
</VBox>
