<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<VBox spacing="8.0" stylesheets="@../../styles.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.engatec.vdl.ui.stage.controller.FormatsController">
   <children>
      <Label text="%subtitles.available.label">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <CheckBox fx:id="selectAllCheckBox" mnemonicParsing="false" text="%checkbox.selectall">
         <VBox.margin>
            <Insets top="8.0" />
         </VBox.margin>
      </CheckBox>
      <ScrollPane fitToWidth="true" styleClass="no-border">
         <content>
            <VBox fx:id="subtitlesVBox" spacing="8.0">
               <padding>
                  <Insets left="8.0" right="8.0" />
               </padding></VBox>
         </content>
      </ScrollPane>
      <HBox alignment="CENTER_RIGHT" spacing="8.0">
         <children>
            <Button fx:id="saveButton" mnemonicParsing="false" styleClass="control-btn" text="%download" />
            <Button fx:id="cancelButton" mnemonicParsing="false" styleClass="control-btn" text="%button.cancel" />
         </children>
         <VBox.margin>
            <Insets top="16.0" />
         </VBox.margin>
      </HBox>
   </children>
   <padding>
      <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
   </padding>
</VBox>
